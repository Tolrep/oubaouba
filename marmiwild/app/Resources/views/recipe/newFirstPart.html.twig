{% extends 'base.html.twig' %}

{% block content %}
<div class="container">

    <div class="row">
        <div class="col">
            <h1 class="text-center py-3">Ajouter une nouvelle recette</h1>
        </div>
    </div>
    {{ form_start(form) }}

    {{ form_row(form.name) }}

    {{ form_row(form.description) }}

    <div class="text-center">
        <input class="mb-5 btn btn-light borderGreen" type="submit" value="Ajouter">
    </div>
    {{ form_end(form) }}
    {% endblock %}