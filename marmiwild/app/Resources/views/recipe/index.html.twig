{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block content %}
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Temps (min)</th>
                <th>Pour ... personne</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.timeToMake }}</td>
                <td>{{ recipe.personNumber }}</td>
                <td>{{ recipe.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}