{% extends 'base.html.twig' %}

{% block content %}
<div class="container">

    <div class="row">
        <div class="col">
            <h1 class="text-center py-3">Ajouter une nouvelle recette</h1>
        </div>
    </div>
    {{ form_start(form) }}

    {{ form_row(form.name) }}

    {{ form_row(form.description) }}
    <div class="row">
        <div class="col-md-3">
            {{ form_row(form.personNumber) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.timeToMake) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.ingredients) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.ingredientsValue.value) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.ingredientsValue.type) }}
        </div>
    </div>

    {{ form_row(form.instruction) }}

    <div class="text-center">
        <input class="mb-5 btn btn-light borderGreen" type="submit" value="Ajouter">
    </div>
    {{ form_end(form) }}
</div>
    {% endblock %}